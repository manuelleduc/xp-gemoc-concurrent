<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <view
            category="fr.inria.aoste.timesquare.utils.categories.timesquare"
            class="fr.inria.aoste.timesquare.ccslkernel.clocktree.ui.ClockGraphView"
            icon="icons/tsq.gif"
            id="fr.inria.aoste.timesquare.ccslkernel.clocktree.ui.ClockGraphView"
            name="Clock Graph">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="fr.inria.aoste.timesquare.ccslkernel.clocktree.ui.commands.category"
            name="Timesquare">
      </category>
      <command
            categoryId="fr.inria.aoste.timesquare.ccslkernel.clocktree.ui.commands.category"
            id="fr.inria.aoste.timesquare.ccslkernel.clocktree.ui.commands.ClockGraphCommand"
            name="Show Clock Graph">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="fr.inria.aoste.timesquare.ccslkernel.clocktree.ui.handlers.ClockGraphHandler"
            commandId="fr.inria.aoste.timesquare.ccslkernel.clocktree.ui.commands.ClockGraphCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               icon="icons/tsq.gif"
               id="fr.inria.aoste.timesquare.ccslkernel.clocktree.ui.menus.TimesquareMenu"
               label="Timesquare">
            <command
                  commandId="fr.inria.aoste.timesquare.ccslkernel.clocktree.ui.commands.ClockGraphCommand"
                  icon="icons/tsq.gif"
                  id="fr.inria.aoste.timesquare.ccslkernel.clocktree.ui.menus.ClockGraphCommand">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="selection">
                     <and>
                        <count
                              value="1">
                        </count>
                        <iterate
                              ifEmpty="false"
                              operator="and">
                           <and>
                              <instanceof
                                    value="org.eclipse.core.resources.IResource">
                              </instanceof>
                              <or>
                                 <test
                                       property="org.eclipse.core.resources.extension"
                                       value="timemodel">
                                 </test>
                                 <test
                                       property="org.eclipse.core.resources.extension"
                                       value="extendedCCSL">
                                 </test>
                              </or>
                           </and>
                        </iterate>
                     </and>
                  </with>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
